---
import '../styles/global.css';
import { getCollection } from 'astro:content';
const projects = await getCollection('projects');
const base = import.meta.env.BASE_URL;
const basePrefix = base.endsWith('/') ? base : base + '/';
const href = (path = '') => basePrefix + String(path).replace(/^\/+/, '');
---
<html lang="en"><head><meta charset="utf-8" /><meta name="viewport" content="width=device-width" /><title>Projects</title></head><body><main class="container"><h1>Projects</h1><ul>{projects.map((p) => (<li><strong>{p.data.title}</strong> — {p.data.summary}</li>))}</ul><a href={base}>Back home</a> · <a href={href('papers/')}>Papers</a> · <a href={href('media/')}>Media</a></main></body></html>
