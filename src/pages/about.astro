---
import '../styles/global.css';
const base = import.meta.env.BASE_URL;
const basePrefix = base.endsWith('/') ? base : base + '/';
const href = (path = '') => basePrefix + String(path).replace(/^\/+/, '');
const cfToken = import.meta.env.PUBLIC_CF_WEB_ANALYTICS_TOKEN || "0efd8831b429400cad16a61e9fb30df6";
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>About</title>
    {cfToken && (
      <script
        defer
        src="https://static.cloudflareinsights.com/beacon.min.js"
        data-cf-beacon={`{"token":"${cfToken}"}`}
      ></script>
    )}

  </head>
  <body>
    <main class="container">
      <h1>About</h1>
      <p>
        I started this personal website in early 2026. There isn’t much here yet, but more is on the way.
      </p>
      <a href={base}>Back home</a> · <a href={href('papers/')}>Papers</a>
    </main>
  </body>
</html>
