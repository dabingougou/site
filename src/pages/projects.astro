---
import '../styles/global.css';
import { getCollection } from 'astro:content';
const projects = await getCollection('projects');
const base = import.meta.env.BASE_URL;
const basePrefix = base.endsWith('/') ? base : base + '/';
const href = (path = '') => basePrefix + String(path).replace(/^\/+/, '');
---
<html lang="en"><head><meta charset="utf-8" /><meta name="viewport" content="width=device-width" /><title>Projects</title></head><body><main class="container"><h1>Projects</h1><ul>{projects.map((p) => (<li><strong>{p.data.title}</strong> — {p.data.summary}{p.data.links?.repo && <> <a href={p.data.links.repo} target="_blank" rel="noopener noreferrer">Repo</a></>}{p.data.links?.demo && <> · <a href={p.data.links.demo} target="_blank" rel="noopener noreferrer">Notebook</a></>}{p.data.links?.report && <> · <a href={p.data.links.report} target="_blank" rel="noopener noreferrer">PDF report</a></>}</li>))}</ul><a href={base}>Back home</a> · <a href={href('papers/')}>Papers</a></main></body></html>
